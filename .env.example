# Database Configuration (TEMPLATE)
DB_HOST=your_db_host
DB_PORT=3306
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Django Secret Key
SECRET_KEY=django-insecure-replace-this-with-a-real-secret-key

